<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageviewIcon"
        android:scaleType="centerCrop"
        android:layout_width="100dp"
        android:layout_height="100dp" 
        android:layout_margin="10dp"
        android:background="@mipmap/default_video"/>

    <TextView
        android:id="@+id/textviewFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:layout_toRightOf="@+id/imageviewIcon"
        android:textColor="@color/F1"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/icon_arrow_right" />

    <TextView
        android:id="@+id/textviewDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textviewFileName"
        android:layout_alignRight="@+id/textviewFileName"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textviewFileName"
        android:textColor="@color/F3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textviewTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewDate"
        android:layout_toLeftOf="@+id/imageView1"
        android:layout_toRightOf="@+id/imageviewIcon"
        android:layout_marginTop="5dp"
        android:textColor="@color/F3"
        android:textSize="20sp" />

</RelativeLayout>